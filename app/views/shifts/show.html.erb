<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @shift.title %>
</p>

<p>
  <strong>Days of the Week:</strong>
  <%= @shift.get_weekdays_as_string %>
</p>

<p>
  <strong>Start time:</strong>
  <%= Shift.format_time_ampm(@shift.start_time) %>
</p>

<p>
  <strong>End time:</strong>
  <%= Shift.format_time_ampm(@shift.end_time) %>
</p>

<p>
  <strong>Max Employees:</strong>
  <%= @shift.max_employees %>
</p>

<%= link_to 'Edit', edit_shift_path(@shift), :class => "btn btn-outline-secondary"  %> |
<%= link_to 'Back to Calendar', calendar_path(@shift.calendar), :class => "btn btn-outline-secondary"  %>
