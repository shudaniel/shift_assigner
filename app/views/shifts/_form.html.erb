<%= form_with(model: shift, local: true) do |form| %>
  <% if shift.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(shift.errors.count, "error") %> prohibited this shift from being saved:</h2>

      <ul>
      <% shift.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= hidden_field_tag :calendar_id, params[:calendar_id] %>
    <%= form.hidden_field :user_id, value: current_user.id %>
  </div>


  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :shift_title %>
  </div>

  <div class="checkboxes">
    <ul>
      <li><%= check_box_tag "sunday", 0, shift.weekdays.include?(0) %> Sunday</li>
      <li><%= check_box_tag "monday", 1, shift.weekdays.include?(1) %> Monday</li>
      <li><%= check_box_tag "tuesday", 2, shift.weekdays.include?(2) %> Tuesday</li>
      <li><%= check_box_tag "wednesday", 3, shift.weekdays.include?(3) %> Wednesday</li>
      <li><%= check_box_tag "thursday", 4, shift.weekdays.include?(4) %> Thursday</li>
      <li><%= check_box_tag "friday", 5, shift.weekdays.include?(5) %> Friday</li>
      <li><%= check_box_tag "saturday", 6, shift.weekdays.include?(6) %> Saturday</li>
    </ul>
  </div>

  <div class="field">
    <%= form.label :start_time %>
    <%= form.time_select :start_time, ampm: true, id: :shift_start_time %>
  </div>

  <div class="field">
    <%= form.label :end_time %>
    <%= form.time_select :end_time, ampm: true, id: :shift_end_time %>
  </div>

  <div class="field">
    <%= form.label :max_employees %>
    <%= form.number_field :max_employees, ampm: true, id: :shift_max_employees %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
