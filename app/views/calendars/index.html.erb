<p id="notice"><%= notice %></p>

<h1>Calendars</h1>

<div class="panel panel-default">
  <div class="panel-heading">
    <div class="row">
      <div class="col-md-6">Name</div>
      <div class="col-md-2"></div>
      <div class="col-md-2"></div>
      <div class="col-md-2"></div>
    </div>
  </div>
  <div class="panel-body">
    <% @calendars.each do |calendar| %>
      <div class="row">
        <div class="col-md-6"><%= calendar.name %></div>
        <div class="col-md-2"><%= link_to 'Show', calendar %></div>
        <div class="col-md-2"><%= link_to 'Edit', edit_calendar_path(calendar) %></div>
        <div class="col-md-2"><%= link_to 'Delete', calendar, method: :delete, data: { confirm: 'Are you sure?' } %></div>
      </div>
    <% end %>
  </div>
</div>

