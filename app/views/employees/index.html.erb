<p id="notice"><%= notice %></p>

<h1>Employees</h1>

<div class="btn-group">
  <%= link_to 'New Employee', new_employee_path(calendar_id: @parent.id), :class => "btn btn-primary" %>
  <%= link_to 'Back to Calendar', calendar_path(@parent), :class => "btn btn-outline-secondary" %>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <div class="row">
      <div class="col-xs-2">Employee Num</div>
      <div class="col-xs-2">Name</div>
      <div class="col-xs-2">Email</div>
      <div class="col-xs-6"></div>
    </div>
  </div>
  <div class="panel-body">
    <% @employees.each do |employee| %>
      <div class="row">
        <div class="col-xs-2"><%= employee.employee_num %></div>
        <div class="col-xs-2"><%= employee.name %></div>
        <div class="col-xs-2"><%= employee.email %></div>
        <div class="col-xs-2"><%= link_to 'Show', employee %></div>
        <div class="col-xs-2"><%= link_to 'Edit', edit_employee_path(employee) %></div>
        <div class="col-xs-2"><%= link_to 'Delete', employee, method: :delete, data: { confirm: 'Are you sure?' } %></div>
      </div>
    <% end %>
  </div>
</div>

<br>

